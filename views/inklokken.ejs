<%- include("./partials/head.ejs") %>
<br>
<div class="card-wrapper">
    <% mwArrayOut.forEach(employee => { %>
    <div class="employee-card">
      <img src="<%= employee.avatar %>" alt="<%= employee.name %> profile photo">
      <div class="stripe"></div>
      <div class="inside-card">
        <h2><%= employee.first_name + " " + employee.last_name %></h2>
        <span id="status-<%= employee.id %>"></span>
      </div>
    </div>
    <% }) %>
  </div>

<div class="container">
<form action="/uitklokken" method="post" name="inklokForm" id="inklokForm" class="inklok-form">

    <!-- Individuele medewerker -->
    <div class="card inklok-card">
      <div class="img-wrapper">
        <img src="./employees.svg" alt="" width="25" height="30">
      </div>
      <div class="card-content">
        <p class="mw-afdeling-title">Medewerker</p>
        <select name="employee" id="employee" class="mw-afdeling employee-input">
          <% employees.forEach(es => { %>
            <option value="<%- es.id %>"><%- es.name %></option>
          <% }) %>
        </select>
      </div>
    </div>
    <input type="submit" class="klok-btn" value="uitklokken">
  </form>
</div>
</div>


<%- include("./partials/foot.ejs") %>